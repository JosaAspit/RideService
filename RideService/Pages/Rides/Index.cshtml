@page
@model RideService.Pages.Rides.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Rides</h1>
<a asp-page="./Create">Create new</a> |
<form>
    <label> Search Rides</label>
    <input asp-for="SearchName" />
    <input type="submit" value="Search" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rides[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rides[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rides[0].Description)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Rides)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>

                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |

                </td>
            </tr>
        }
    </tbody>
</table>

